extends layout

block content
  h1= title
  p Welcome to #{title}. My name is Sidhartha Gundarapu
  - let results=[{Book_title:"To Kill a Mockingbird",genre:"Fiction",cost:"18"},{Book_title:"Pride and Prejudice",genre:"Romance",cost:"12"},{Book_title:"Reprieve",genre:"Horror",cost:"23"}]
  div(class="container-fluid")
    div(class="row")
      each books, index in results
        div(class="col-sm-2" onclick=`buy(${index+1})`) #{books.Book_title} - #{books.genre} - $#{books.cost}

  script.
    function buy(index){
      alert(`You purchased item ${index}`);
    }      